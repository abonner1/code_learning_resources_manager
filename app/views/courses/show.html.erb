<h1><%= @course.title %></h1>

<h3>Languages:</h3>
<ul>
  <%= render partial: "/languages/display_languages", collection: @course.languages, as: :language %>
</ul>

<p><%= @course.description %></p>

<h3>Resources for this class:</h3>
<ul>
  <%= render partial: "/resources/display_resources", collection: @course.resources, as: :resource %>
</ul>

<h3>People in this class:</h3>
<ul>
  <% @course.users.each do |user| %>
    <li><%= user.username %></li>
  <% end %>
</ul>

<%= link_to "Edit Course", edit_course_path(@course) %>
<%= link_to "Add a Resource", new_course_resource_path(@course) %>
<%= button_to "Delete this Course", course_path(@course), method: 'delete' %>
