<div class="form-group">
  <%= f.label "title of the resource" %>
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label "resource url" %>
  <%= f.text_field :url, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :description %>:
  <%= f.text_area :description, class: "form-control", rows: "3" %>
</div>
<div class="form-check">
  <%= f.label "Select coding languages it covers:" %>
  <%= f.collection_check_boxes(:language_ids, Language.all, :id, :name) do |b| %>
    <%= b.label(class: "form-check-label") {b.check_box(class: "form-check-input") + " #{b.text}"} %>
  <% end %>
</div>
<div class="form-check">
    <%= f.label "Tag it!" %>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |b| %>
      <%= b.label(class: "form-check-label") {b.check_box(class: "form-check-input") + " #{b.text}"} %>
    <% end %>
</div>
<div class="form-group">
  <%= f.fields_for :tags, @resource.tags.build do |tag_fields| %>
    <%= tag_fields.label "Or add a new one" %>
    <%= tag_fields.text_field :name, class: "form-control" %>
  <% end %>
</div>
